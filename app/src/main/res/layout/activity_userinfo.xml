<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/blue"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="个人信息"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rtl_back"
            android:layout_width="60dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/back"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/litter_round_white_bg"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="0.2dp"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:text="手机号码"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:textColor="@color/light_black"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_phone"
                android:layout_toRightOf="@+id/tv_phone"
                android:layout_marginLeft="29dp"
                android:inputType="number"
                android:textColorHint="@color/dark_gray"
                android:background="@null"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:hint="请再次您的手机号码"
                android:layout_height="50dp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="0.2dp"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:text="收货地址"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:textColor="@color/light_black"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/et_address"
                android:layout_toRightOf="@+id/tv_address"
                android:layout_marginLeft="29dp"
                android:inputType="text"
                android:textColorHint="@color/dark_gray"
                android:background="@null"
                android:textSize="13sp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:hint="请再次您的收货地址"
                android:layout_height="50dp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:layout_height="0.2dp"></View>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rtl_comfirm"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/litter_round_blue_bg"
        android:layout_height="40dp">
        <TextView
            android:text="确认修改"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
